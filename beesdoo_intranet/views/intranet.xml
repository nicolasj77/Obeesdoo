<openerp>
	<data>

		<record id="view_tree_product_intranet" model="ir.ui.view">
			<field name="name">Intranet Product Tree</field>
			<field name="model">product.template</field>
			<field name="arch" type="xml">
				<tree string="Products" create="false" edit="false">
					<field name="name" />
					<field name="total_with_vat" />
					<field name="main_seller_id" />
					<field name="eco_label" />
					<field name="local_label" />
					<field name="fair_label" />
					<field name="origin_label" />
				</tree>
			</field>
		</record>

		<record id="view_form_product_intranet" model="ir.ui.view">
			<field name="name">Intranet Product Form</field>
			<field name="model">product.template</field>
			<field name="arch" type="xml">
				<form string="Product" create="false" edit="false">
					<sheet>
						<field name="image_medium" widget="image" class="oe_avatar" />
						<div class="oe_title">
							<label class="oe_edit_only" for="name" string="Product Name" />
							<h1>
								<field name="name" />
							</h1>
						</div>

						<notebook>
							<page string="General Information">
								<group>
									<group name="Sale">
										<field name="total_with_vat" />
										<field name="main_seller_id" />
										<field name="available_in_pos" />
									</group>
									<group name="Label">
										<field name="eco_label" />
										<field name="local_label" />
										<field name="fair_label" />
										<field name="origin_label" />
									</group>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_intranet_products">
			<field name="name">Products</field>
			<field name="res_model">product.template</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record model="ir.actions.act_window.view" id="action_intranet_products_tree_view">
			<field eval="1" name="sequence" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="beesdoo_intranet.view_tree_product_intranet" />
			<field name="act_window_id" ref="action_intranet_products" />
		</record>

		<record model="ir.actions.act_window.view" id="action_intranet_products_form_view">
			<field eval="2" name="sequence" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="beesdoo_intranet.view_form_product_intranet" />
			<field name="act_window_id" ref="action_intranet_products" />
		</record>

		<menuitem id="menu_intranet" name="Intranet" sequence="0" />
		<menuitem id="menu_intranet_products" parent="menu_intranet"
			name="Products" action="action_intranet_products" />

	</data>
</openerp>